inherit qt4

DESCRIPTION="Qt4 frontend for MPlayer"
HOMEPAGE="http://smplayer.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.bz2"
PATCH_URI="0.6.5.1-install-dirs.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_install() {
	cd ${B}
	cyginstall

	# coreutils .exe handling
	strip ${D}/usr/bin/*
}
